<Window x:Class="ExcelToWord.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExcelToWord"
        mc:Ignorable="d"
        Title="MainWindow" Height="150" Width="200" MinHeight="150" MinWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button x:Name="ExcelButton" Margin="10" Content="Загрузить xlsx" Click="ExcelButton_Click"/>
        <Button x:Name="WordButton" Grid.Row="1" Margin="10" Content="Сохранить docx" Click="WordButton_Click"/>
        <Button x:Name="ClearButton" Grid.Row="2" Margin="10" Content="Очистить БД" Click="ClearButton_Click"/>
    </Grid>
</Window>
